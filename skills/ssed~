#!/usr/bin/perl -w 
use strict;

my ($dir) = @_;
my @files = glob "*.html";
my $fl;
foreach my $efile (@files) {
    open(FILE, "<" . $efile);
    while(<FILE>) {
	#s/shelf_books\.jpg/training\.jpg/;
	s/\/7<\/span>/\/8<\/span>/;
        #s/localhost/www\.cloudsandangels\.com/;
	#s/localhost/192\.168\.1\.3/;
	#s/192\.168\.1\.3/localhost/;
	 $fl .= $_;
    }
    print $fl;
    close FILE;
    open(FILE, ">" . $efile);
    print FILE $fl;
    $fl ="";
#    print $fl;
    close FILE;
}
exit(0)

